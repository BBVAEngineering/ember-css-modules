{{#usage-example/snippet effectivePath=path triggerValue=content}}
{{#if (eq project.type 'addon')}}
module.exports = {
  options: {
    cssModules: {
{{content}}
    }
  }
};
{{else}}
module.exports = function(defaults) {
  var app = new EmberApp(defaults, {
    cssModules: {
{{content}}
    }
  });
  return app.toTree();
};
{{/if}}
